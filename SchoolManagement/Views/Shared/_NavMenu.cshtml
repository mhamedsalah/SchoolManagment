@using SchoolManagement.Resources
@{
    var routeData = ViewContext.RouteData.Values;

    var englishRouteData = new RouteValueDictionary(routeData);
    englishRouteData["lang"] = "en";

    var arabicRouteData = new RouteValueDictionary(routeData);
    arabicRouteData["lang"] = "ar";

    var language = (string)routeData["lang"];
}
